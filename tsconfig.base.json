{
  "compileOnSave": true,
  "formatOnSave": true,
  "compilerOptions": {
    "rootDir": "./wisdom",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wisdom/libs": ["libs/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "files": [
    "web/src/**/*.ts",
    "web/src/polyfills.ts"
  ],
}
